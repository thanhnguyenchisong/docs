{
  "compileOnSave": false,
  "compilerOptions": {
    /* === B√†i 01: TypeScript c∆° b·∫£n ‚Äî strict mode === */
    "strict": true,                        // B·∫≠t t·∫•t c·∫£ strict checks
    "strictNullChecks": true,              // string kh√¥ng bao g·ªìm null/undefined
    "noImplicitAny": true,                 // Kh√¥ng cho ph√©p type any ng·∫ßm
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* === B√†i 01: Decorators ‚Äî Angular d√πng decorator cho Component, Injectable, ... === */
    "experimentalDecorators": true,        // B·∫≠t decorator (@Component, @Injectable, ...)
    "emitDecoratorMetadata": true,         // Emit metadata cho DI

    /* === Module & target === */
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "dom"],
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "useDefineForClassFields": false,

    /* === Path aliases ‚Äî gi√∫p import g·ªçn === */
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@shared/*": ["src/app/shared/*"],
      "@features/*": ["src/app/features/*"],
      "@env/*": ["src/environments/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true                // Template type checking ‚Äî b·∫Øt l·ªói binding sai type
  }
}
